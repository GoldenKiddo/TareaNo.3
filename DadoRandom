var num;

function setup() {
  createCanvas(600, 600);
}

function lado1() {
	background(220);
	strokeWeight(3)
	fill(255);
	rect(100,100,400,400);
	fill(0);
	ellipse(300,300,50,50);
	
}

function lado2() {
	background(220);
	strokeWeight(3)
	fill(255);
	rect(100,100,400,400);
	fill(0);
	ellipse(200,200,50,50);
	fill(0);
	ellipse(400,400,50,50);

}

function lado3() {
	background(220);
	strokeWeight(3)
	fill(255);
	rect(100,100,400,400);
	fill(0);
	ellipse(200,200,50,50);
	fill(0);
	ellipse(400,400,50,50);
	fill(0);
	ellipse(300,300,50,50);
}

function lado4() {
	background(220);
